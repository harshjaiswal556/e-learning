          position: fixed;
          background-color: darkturquoise;
          height: 100%;
          width: 100%;
      }
      .navbar{
        
          border-radius: 5px;
      }
      h1{
          font-size: 400%;
      }
      .main_header_left{
    height: 30rem;
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
      .main_header_right{
    height: 30rem;
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
.main_header_right figure img{
    filter: drop-shadow(0 0.2rem 0.6rem rgba(0,0,0,0.65));
}
.course{
    display: inline-flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
}
main{
  height: 100%;
background-color: rgba(0, 255, 255, 0.247)
}
.cardPadding{
    padding-left: 50px;
